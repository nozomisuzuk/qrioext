<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Invite_user</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .container {
            padding-top: 20px;
        }

        hr{
            height: 30px;
        }
    </style>
    <script>
        window.onload = function() {
            var messageElement = document.getElementById('successMessage');
            if (messageElement) {
                setTimeout(function() {
                    messageElement.style.display = 'none';
                }, 3000);
            }
        };
    </script>
</head>
<body>
    <div class="container">
        <% if (message) { %>
            <div id="successMessage" class="alert alert-success"><%= message %></div>
        <% } %>
        <h1>Invite New User</h1>
        <form method="POST" action="/admin/create_user/create" class="mb-4">
            <div class="form-group">
                <label for="name">Username:</label>
                <input type="text" id="name" name="name" class="form-control" required>
            </div>
            <div class="form-group">
                <label for="password">Password (4 digits):</label>
                <input type="password" id="password" name="password" class="form-control" pattern="\d{4}" title="Please enter a 4-digit number." required>
            </div>
            <div class="form-group">
                <label for="expiration">Expiration(minutes):</label>
                <input type="number" id="expiration" name="expiration" class="form-control" min="1" value="10" title="Please enter minutes." required>
            </div>
            <button type="submit" class="btn btn-primary">Invite User</button>
        </form>

        <p>
            <div>
            <h2>Invited Users</h2>
              <table class="table table-bordered table-striped mt-4">
                <thead>
                  <tr>
                    <th>name</th>
                    <th>expiration date</th>
                  </tr>
                </thead>
                <tbody>
                  <% users.forEach((user)=>{ %>
                  <tr>
                    <td><%= user.username %></td>
                    <td><%= user.expiration_date %></td>
                  </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
          </p>

          <button onclick="location.href='/admin'" class="btn btn-secondary">戻る</button>


        <hr>

        <h2>For Debugging</h2>

        <h3>/activate</h3>
        <form method="POST" action="/admin/create_user/activate" class="mb-4">
            <div class="form-group">
                <label for="password">Password:</label>
                <input type="text" id="password" name="password" class="form-control" required>
            </div>
            <button type="submit" class="btn btn-primary">Activate User</button>
        </form>



        
    </div>



    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    
</body>
</html>
