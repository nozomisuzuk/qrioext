<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User list</title>
</head>
<body>
    <h1>User list</h1>
    <table>
        <tr>
            <th>id</th>
            <th>name</th>
            <th>status</th>
            <th>expirationdate</th>
        </tr>
        <% users.forEach((user)=>{ %>
        <tr>
            <form action="/admin/list_users/update_expiration/<%= user.id %>" method="post">
                <td><%= user.id %></td>
                <td><%= user.username %></td>
                <td><%= user.status %></td>
                <td>
                    <span id="dateDisplay_<%= user.id %>"><%= user.expiration_date %></span><!-- 表示される日付 -->
                    <input type="date" id="dateInput_<%= user.id %>" name="newExpirationDate" style="display: none;"> <!-- 隠れている日付入力欄 -->
                </td>
                <td>
                    <button type="button" onclick="editDate('<%= user.id %>')">編集</button>
                    <button type="submit" style="display: none;">更新</button>
                </td>

                <td><a href="/admin/list_users/delete/<%= user.id %>">削除</a></td>
                <td><a href="/admin/list_users/restore/<%= user.id %>">復元</a></td>
            </form>
        </tr>
        <% }); %>
      </table>

    <script>
        function editDate(userId) {
            var displaySpan = document.getElementById('dateDisplay_' + userId);
            var dateInput = document.getElementById('dateInput_' + userId);

            // 現在の日付を非表示に
            displaySpan.style.display = 'none';

            // 入力欄を表示し、現在の日付を設定
            dateInput.style.display = 'block';
            dateInput.value = displaySpan.textContent;

            // 編集ボタンを非表示にし、更新ボタンを表示
            event.currentTarget.style.display = 'none';
            event.currentTarget.nextElementSibling.style.display = 'block';
        }

        function updateDate(userId) {
            var newDate = document.getElementById('dateInput_' + userId).value;
            document.getElementById('dateDisplay_' + userId).innerText = newDate;
            document.getElementById('dateDisplay_' + userId).style.display = 'block';
            document.getElementById('dateInput_' + userId).style.display = 'none';
            event.currentTarget.style.display = 'none';
            event.currentTarget.previousElementSibling.style.display = 'block';
        }
    </script>
</body>
</html>